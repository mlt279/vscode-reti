{
  "name": "reti",
  "displayName": "ReTI Tools",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "breakpoints": [
      {
        "language": "reti"
      }
    ],
    "debuggers": [
      {
        "type": "reti",
        "languages": [
          "reti"
        ],
        "label": "ReTI Debug",
        "program": "./out/debug/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a text file.",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              }
            }
          },
          "attach": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a text file.",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after attach.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "reti",
            "request": "launch",
            "name": "Ask for file name",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "ReTI Debug: Launch",
            "description": "TODO",
            "body": {
              "type": "reti",
              "request": "launch",
              "name": "Ask for file name",
              "program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
              "stopOnEntry": true
            }
          }
        ],
        "variables": {
          "AskForProgramName": "reti.debug.getProgramName"
        }
      }
    ],
    "icons": {
      "reti-assemble": {
        "description": "Assemble icon",
        "default": {
          "fontPath": "./fonts/icomoon.woff",
          "fontCharacter": "\\EA5B"
        }
      },
      "reti-disassemble": {
        "description": "Disassemble icon",
        "default": {
          "fontPath": "./fonts/icomoon.woff",
          "fontCharacter": "\\EA81"
        }
      }
    },
    "commands": [
      {
        "command": "reti.emulate",
        "title": "Emulate",
        "icon": "$(run)"
      },
      {
        "command": "reti.quiz",
        "title": "Start ReTI Quiz"
      },
      {
        "command": "reti.generate",
        "title": "Generate Random ReTI-Code"
      },
      {
        "command": "reti.assemble",
        "title": "Assemble ReTI-Code",
        "icon": "$(reti-assemble)"
      },
      {
        "command": "reti.stopEmulation",
        "title": "Stop Emulation",
        "icon": "$(stop)"
      },
      {
        "command": "reti.disassemble",
        "title": "Disassemble ReTI-Code",
        "icon": "$(reti-disassemble)"
      },
      {
        "command": "reti.debug",
        "title": "Debug ReTI",
        "icon": "$(debug-alt)"
      }
    ],
    "languages": [
      {
        "id": "reti",
        "aliases": [
          "ReTI",
          "RETI",
          "reti"
        ],
        "extensions": [
          ".reti"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "retias",
        "aliases": [
          "ReTI Assembler",
          "retias"
        ],
        "extensions": [
          ".retias"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "reti",
        "scopeName": "source.reti",
        "path": "./syntaxes/reti.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "comment.line.reti",
            "settings": {
              "foreground": "#506844"
            }
          }
        ]
      }
    },
    "menus": {
      "editor/title": [
        {
          "command": "reti.assemble",
          "when": "editorLangId == 'reti'",
          "group": "navigation@4",
          "tooltip": "Emulate ReTI Code, Ctrl+Alt+A."
        },
        {
          "command": "reti.stopEmulation",
          "when": "editorLangId == 'reti' || editorLangId == 'retias'",
          "group": "navigation@3",
          "tooltip": "Stops emulation."
        },
        {
          "command": "reti.disassemble",
          "when": "editorLangId == 'retias'",
          "group": "navigation@4",
          "tooltip": "Disassemble ReTI Code."
        }
      ],
      "editor/title/run": [
        {
          "command": "reti.emulate",
          "when": "editorLangId == 'reti' || editorLangId == 'retias'",
          "group": "navigation@2",
          "tooltip": "Emulate ReTI Code, Ctrl+Alt+E."
        },
        {
          "command": "reti.debug",
          "when": "resourceLangId == reti",
          "group": "navigation@2",
          "tooltip": "Debug ReTI Code, Ctrl+Alt+D."
        }        
      ]
    },
    "keybindings": [
      {
        "command": "reti.emulate",
        "key": "ctrl+alt+e",
        "when": "editorLangId == 'reti'"
      },
      {
        "command": "reti.assemble",
        "key": "ctrl+alt+a",
        "when": "editorLangId == 'reti'"
      },
      {
        "command": "reti.disassemble",
        "key": "ctrl+alt+a",
        "when": "editorLangId == 'retias'"
      },
      {
        "command": "reti.debug",
        "key": "ctrl+alt+d",
        "when": "resourceLangId == reti"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test-c": "npm run compile-tests && npm run test",
    "compile-web": "tsc --build tsconfig.web.json"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/path-browserify": "^1.0.3",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/debugadapter": "^1.56.0",
    "@vscode/debugadapter-testsupport": "^1.56.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "await-notify": "^1.0.1",
    "esbuild": "^0.25.3",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.1",
    "typescript": "^5.7.2",
    "vscode-languageclient": "^8.0.0",
    "vscode-languageserver": "^8.0.0",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
