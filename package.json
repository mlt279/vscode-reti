{
  "name": "reti",
  "displayName": "ReTI Tools",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "icons" :{
      "reti-assemble": {
        "description": "Assemble icon",
        "default": {
          "fontPath": "./fonts/icomoon.woff",
          "fontCharacter": "\\EA5B"
        }
      },
      "reti-disassemble": {
        "description": "Disassemble icon",
        "default": {
          "fontPath": "./fonts/icomoon.woff",
          "fontCharacter": "\\EA81"
        }
      }
    },
    "commands": [
      {
        "command": "reti.emulate",
        "title": "Emulate",
          "icon": "$(run)"
      },
      {
        "command": "reti.quiz",
        "title": "Start ReTI Quiz"
      },
      {
        "command": "reti.generate",
        "title": "Generate Random ReTI-Code"
      },
      {
        "command": "reti.assemble",
        "title": "Assemble ReTI-Code",
        "icon": "$(reti-assemble)"
      },
      {
        "command": "reti.stopEmulation",
        "title": "Stop Emulation",
        "icon": "$(stop)"
      },
      {
        "command": "reti.disassemble",
        "title": "Disassemble ReTI-Code",
        "icon": "$(reti-disassemble)"
      }
    ],
    "languages": [
      {
        "id": "reti",
        "aliases": [
          "ReTI",
          "RETI",
          "reti"
        ],
        "extensions": [
          ".reti"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "retias",
        "aliases": [
          "ReTI Assembler",
          "retias"
        ],
        "extensions": [
          ".retias"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": 
    [
      {
      "language": "reti",
      "scopeName": "source.reti",
      "path": "./syntaxes/reti.tmLanguage.json"
      }
    ],
    "configurationDefaults": 
    {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "comment.line.reti",
            "settings": 
            {
              "foreground": "#506844"
            }
          }
        ]
      }
    },
    "menus": {
      "editor/title": [        
        {
        "command" : "reti.emulate",
        "when": "editorLangId == 'reti' || editorLangId == 'retias'",
        "group": "navigation@1",
        "tooltip": "Assemble ReTI Code, Ctrl+Alt+A."
        },
        {
          "command": "reti.assemble",
          "when": "editorLangId == 'reti'",
          "group": "navigation@3",
          "tooltip": "Emulate ReTI Code, Ctrl+Alt+E."
        },
        {
          "command": "reti.stopEmulation",
          "when": "editorLangId == 'reti' || editorLangId == 'retias'",
          "group": "navigation@2",
          "tooltip": "Stops emulation."
        },
        {
          "command": "reti.disassemble",
          "when": "editorLangId == 'retias'",
          "group": "navigation@3",
          "tooltip": "Disassemble ReTI Code."
        }
      ]
    },
    "keybindings": [
      {
        "command": "reti.emulate",
        "key": "ctrl+alt+e",
        "when": "editorLangId == 'reti'"
      },
      {
        "command": "reti.assemble",
        "key": "ctrl+alt+a",
        "when": "editorLangId == 'reti'"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test-c": "npm run compile-tests && npm run test",
    "compile-web": "tsc --build tsconfig.web.json"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
