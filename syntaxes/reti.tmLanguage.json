{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ReTI",
	"patterns": [
		{
			"include": "#instructions"
		},
		{
			"include": "#registers"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"instructions": {
			"patterns": [
				{
					"name": "keyword.control.move",
					"match": "(?i)(?<=(^|\\s))MOVE(?!(\\w|>|=|≥|<|≠|≤))"
				},
				{
					"name": "keyword.control.store",
					"match": "(?i)(?<=(^|\\s))STORE(IN[12])?(?!(\\w|>|=|≥|<|≠|≤))"
				},
				{
					"name": "keyword.control.load",
					"match": "(?i)(?<=(^|\\s))LOAD(I|IN[12])?(?!(\\w|>|=|≥|<|≠|≤))"
				},
				{
					"name": "keyword.control.jump",
					"match": "(?i)(?<=(^|\\s))JUMP(?:!=|<=|>=|>|=|≥|<|≠|≤|lt|eq|leq|gt|geq|neq)?(?!(\\w|>|=|≥|<|≠|≤))"
				},
				{
					"name": "keyword.control.nop",
					"match": "(?i)(?<=(^|\\s))NOP(?!(\\w|>|=|≥|<|≠|≤))"
				},
				{
					"name": "keyword.control.compute",
					"match": "(?i)(?<=(^|\\s))(ADD|SUB|OPLUS|AND|OR)(?:I)?(?!(\\w|>|=|≥|<|≠|≤))"
				}
			]
		},
		"registers": {
			"patterns": [
				{
					"name": "registers.reti",
					"match": "(?i)(?<=(^|\\s))(ACC|IN1|IN2|PC)(?!(\\w|>|=|≥|<|≠|≤))"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.reti",
					"match": ";.*$"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.reti",
					"match": "(?<=(^|\\s))-?\\d+(?!(\\w|>|=|≥|<|≠|≤))"
				}
			]
		}
	},
	"scopeName": "source.reti"
}