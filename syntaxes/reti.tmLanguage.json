{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ReTI",
	"patterns": [
		{
			"include": "#instructions"
		},
		{
			"include": "#registers"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"instructions": {
			"patterns": [
				{
					"name": "keyword.control.move",
					"match": "\\bMOVE\\b"
				},
				{
					"name": "keyword.control.store",
					"match": "\\bSTORE(?:IN[12])?\\b"
				},
				{
					"name": "keyword.control.load",
					"match": "\\bLOAD(?:I|IN[12])?\\b"
				},
				{
					"name": "keyword.control.jump",
					"match": "\\bJUMP(?:(>|=|≥|<|≠|≤|lt|eq|leq|gt|geq|neq))?\\b"
				},
				{
					"name": "keyword.control.nop",
					"match": "\\bNOP\\b"
				},
				{
					"name": "keyword.control.compute",
					"match": "\\b(ADD|SUB|OPLUS|AND|OR)(?:I)?\\b"
				},
				{
					"name": "variable.language.register",
					"match": "\\b(IN[12]|ACC|PC)\\b"
				}
			]
		},
		"registers": {
			"patterns": [
				{
					"name": "registers.reti",
					"match": "\\b(ACC|IN1|IN2|PC)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.reti",
					"match": ";.*$"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.reti",
					"match": "\\b\\d+\\b"
				}
			]
		}
	},
	"scopeName": "source.reti"
}